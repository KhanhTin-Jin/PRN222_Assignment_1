@model KhanhTin.BusinessLogic.DTOs.AccountUpdateDto
@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        font-family: 'Poppins', sans-serif;
        color: #e0e0e0;
        overflow-x: hidden;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        padding: 2rem;
    }

    .form-wrapper {
        background: rgba(22, 29, 62, 0.4);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        width: 100%;
        padding: 2.5rem 3rem;
        border: 1px solid rgba(137, 124, 255, 0.2);
    }

        .form-wrapper h2 {
            font-weight: 600;
            font-size: 2rem;
            color: #00e5ff;
            margin-bottom: 2rem;
            text-align: center;
            letter-spacing: 1px;
            text-shadow: 0 0 5px #00e5ff, 0 0 10px #00e5ff;
        }

    .input-group-custom {
        position: relative;
        margin-bottom: 1.8rem;
    }

    .form-label {
        font-size: 0.85rem;
        color: #9a9ed9;
        margin-bottom: 0.5rem;
        display: block;
    }

    .input-group-custom .form-control,
    .input-group-custom .form-select {
        height: 52px;
        border-radius: 8px;
        border: 1px solid rgba(137, 124, 255, 0.3);
        background: rgba(22, 29, 62, 0.5);
        color: #e0e0e0;
        padding-left: 3rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .input-group-custom .form-control:focus,
        .input-group-custom .form-select:focus {
            border-color: #00e5ff;
            box-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
            background: rgba(22, 29, 62, 0.7);
            outline: none;
        }

    .input-group-custom > .fas { /* Icon bên trái */
        position: absolute;
        left: 1rem;
        top: calc(50% + 10px); /* Điều chỉnh vị trí icon cho đúng với label ở trên */
        transform: translateY(-50%);
        color: #00e5ff;
        font-size: 1rem;
        z-index: 10;
        transition: all 0.3s ease;
        text-shadow: 0 0 5px #00e5ff;
    }

    .input-group-custom:focus-within > .fas {
        color: #ff00ff;
        text-shadow: 0 0 5px #ff00ff;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: calc(50% + 10px);
        transform: translateY(-50%);
        cursor: pointer;
        color: #00e5ff;
        z-index: 10;
    }

    .btn {
        font-weight: 500;
        padding: 0.8rem;
        border-radius: 8px;
        width: 100%;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: none;
        letter-spacing: 0.5px;
    }

    .btn-primary {
        background: linear-gradient(45deg, #00e5ff, #ff00ff);
        color: #fff;
        box-shadow: 0 4px 15px rgba(0, 229, 255, 0.4);
    }

        .btn-primary:hover {
            box-shadow: 0 6px 20px rgba(0, 229, 255, 0.6);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: transparent;
        color: #9a9ed9;
        border: 1px solid rgba(137, 124, 255, 0.3);
    }

        .btn-secondary:hover {
            background: rgba(137, 124, 255, 0.1);
            border-color: rgba(137, 124, 255, 0.5);
            color: #e0e0e0;
            transform: translateY(-2px);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ff6b6b;
        margin-top: 0.5rem;
    }

    @@media (max-width: 576px) {
        .form-wrapper {
            padding: 2rem 1.5rem;
        }
    }

</style>

<div class="form-container">
    <div class="form-wrapper">
        <h2>Edit Account</h2>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="AccountID" />

            <div class="input-group-custom">
                <label asp-for="AccountName" class="form-label">Full Name</label>
                <i class="fas fa-user-astronaut"></i>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>

            <div class="input-group-custom">
                <label asp-for="AccountEmail" class="form-label">Email</label>
                <i class="fas fa-at"></i>
                <input asp-for="AccountEmail" class="form-control" type="email" />
                <span asp-validation-for="AccountEmail" class="text-danger"></span>
            </div>

            <div class="input-group-custom">
                <label asp-for="AccountRole" class="form-label">Role</label>
                <i class="fas fa-user-shield"></i>
                <select asp-for="AccountRole" class="form-select">
                    <option value="0">Admin</option>
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                </select>
                <span asp-validation-for="AccountRole" class="text-danger"></span>
            </div>

            <div class="input-group-custom">
                <label asp-for="Password" class="form-label">New Password (leave blank to keep current)</label>
                <i class="fas fa-key"></i>
                <input asp-for="Password" id="passwordInput" class="form-control" type="password" />
                <span id="togglePassword" class="password-toggle"><i class="fas fa-eye"></i></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-3 mt-5">
                <a asp-action="ManageAccounts" class="btn btn-secondary order-2 order-sm-1">Cancel</a>
                <button type="submit" class="btn btn-primary order-1 order-sm-2">Save Changes</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('#togglePassword');
            const passwordInput = document.querySelector('#passwordInput');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function () {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }
        });
    </script>
}