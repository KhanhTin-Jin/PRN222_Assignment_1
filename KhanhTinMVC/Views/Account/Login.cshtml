@model KhanhTin.BusinessLogic.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
        font-family: 'Poppins', sans-serif;
        color: #e0e0e0;
        overflow-x: hidden;
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1.5rem;
    }

    .form-wrapper {
        background: rgba(22, 29, 62, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        max-width: 450px;
        width: 100%;
        padding: 3rem;
        border: 1px solid rgba(137, 124, 255, 0.2);
        position: relative;
    }

        .form-wrapper h2 {
            font-weight: 600;
            font-size: 2.2rem;
            color: #00e5ff;
            margin-bottom: 2.5rem;
            text-align: center;
            letter-spacing: 1px;
            text-shadow: 0 0 5px #00e5ff, 0 0 10px #00e5ff;
        }

    .input-group-custom {
        position: relative;
        margin-bottom: 1.75rem;
    }

        .input-group-custom .form-control {
            height: 50px;
            border-radius: 8px;
            border: 1px solid rgba(137, 124, 255, 0.3);
            background: rgba(22, 29, 62, 0.5);
            color: #e0e0e0;
            padding-left: 3rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .input-group-custom .form-control:focus {
                border-color: #00e5ff;
                box-shadow: 0 0 12px rgba(0, 229, 255, 0.6);
                background: rgba(22, 29, 62, 0.7);
                outline: none;
            }

        .input-group-custom > .fas {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #00e5ff;
            font-size: 1rem;
            z-index: 10;
            transition: all 0.3s ease;
            text-shadow: 0 0 5px rgba(0, 229, 255, 0.7);
        }

        .input-group-custom:focus-within > .fas {
            color: #ff00ff;
            text-shadow: 0 0 5px rgba(255, 0, 255, 0.7);
        }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #00e5ff;
        z-index: 10;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

        .custom-checkbox .form-check-input {
            display: none;
        }

        .custom-checkbox .form-check-label {
            color: #9a9ed9;
            cursor: pointer;
            position: relative;
            padding-left: 2rem;
            font-size: 0.9rem;
        }

            .custom-checkbox .form-check-label::before { /* The box */
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 20px;
                height: 20px;
                border: 1px solid rgba(137, 124, 255, 0.5);
                border-radius: 4px;
                background: rgba(22, 29, 62, 0.5);
                transition: all 0.3s ease;
            }

            .custom-checkbox .form-check-label::after { /* The checkmark */
                content: '\f00c';
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                position: absolute;
                left: 4px;
                top: 50%;
                transform: translateY(-50%) scale(0);
                font-size: 0.8rem;
                color: #00e5ff;
                transition: all 0.3s ease;
            }

        .custom-checkbox .form-check-input:checked + .form-check-label::before {
            background: rgba(0, 229, 255, 0.2);
            border-color: #00e5ff;
        }

        .custom-checkbox .form-check-input:checked + .form-check-label::after {
            transform: translateY(-50%) scale(1);
        }

    .btn-login {
        font-weight: 500;
        padding: 0.8rem;
        border-radius: 8px;
        width: 100%;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: none;
        letter-spacing: 0.5px;
        background: linear-gradient(45deg, #00e5ff, #c000ff);
        color: #fff;
        box-shadow: 0 4px 20px rgba(150, 50, 255, 0.5);
    }

        .btn-login:hover {
            box-shadow: 0 6px 25px rgba(0, 229, 255, 0.7);
            transform: translateY(-2px);
        }

    .form-footer {
        text-align: center;
        margin-top: 2.5rem;
        color: rgba(154, 158, 217, 0.6);
        font-size: 0.8rem;
        letter-spacing: 1px;
    }

    .text-danger {
        font-size: 0.85rem;
        color: #ff6b6b;
        margin-top: 0.5rem;
    }

    @@media (max-width: 576px) {
        .form-wrapper {
            padding: 2.5rem 1.5rem;
        }
    }

</style>

<div class="form-container">
    <div class="form-wrapper">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="input-group-custom">
                <i class="fas fa-envelope"></i>
                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group-custom">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" id="passwordInput" class="form-control" placeholder="Password" />
                <span id="togglePassword" class="password-toggle"><i class="fas fa-eye"></i></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="custom-checkbox">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-login">Login</button>
            </div>
        </form>
        <p class="form-footer">FU News Management System</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('#togglePassword');
            const passwordInput = document.querySelector('#passwordInput');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function () {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }
        });
    </script>
}