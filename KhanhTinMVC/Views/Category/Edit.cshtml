@model KhanhTin.BusinessLogic.DTOs.CategoryUpdateDto
@{
    ViewData["Title"] = "Edit Category";
}

@* Font & Icons *@
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    :root {
        --bg-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        --glass-bg: rgba(22, 29, 62, 0.45);
        --glass-border: rgba(137, 124, 255, 0.25);
        --input-bg: rgba(22, 29, 62, 0.6);
        --text-primary: #e0e0e0;
        --text-secondary: #9a9ed9;
        --glow-cyan: #00b7eb;
        --glow-magenta: #ff00ff;
    }

    body {
        background: var(--bg-gradient);
        font-family: 'Poppins', sans-serif;
        color: var(--text-primary);
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .page-title {
        font-weight: 600;
        font-size: 2.2rem;
        color: var(--glow-cyan);
        text-shadow: 0 0 7px var(--glow-cyan);
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .btn-back {
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid var(--glass-border);
        font-weight: 500;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-back:hover {
            color: var(--glow-cyan);
            border-color: var(--glow-cyan);
            box-shadow: 0 0 8px var(--glow-cyan);
        }

    .form-wrapper {
        background: var(--glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
        padding: 2.5rem 3rem;
        border: 1px solid var(--glass-border);
    }

    .form-label {
        display: block;
        font-weight: 500;
        color: var(--text-secondary);
        margin-bottom: 0.6rem;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        width: 100%;
        height: 50px;
        border-radius: 8px;
        border: 1px solid var(--glass-border);
        background: var(--input-bg);
        color: var(--text-primary);
        padding: 0 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    textarea.form-control {
        height: auto;
        padding: 1rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--glow-cyan);
        box-shadow: 0 0 12px rgba(0, 183, 235, 0.6);
        background: rgba(22, 29, 62, 0.8);
        outline: none;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-top: 1rem;
    }

        .custom-checkbox .form-check-input {
            display: none;
        }

        .custom-checkbox .form-check-label {
            color: var(--text-secondary);
            cursor: pointer;
            position: relative;
            padding-left: 2rem;
            font-size: 1rem;
        }

            .custom-checkbox .form-check-label::before { /* Box */
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                width: 22px;
                height: 22px;
                border: 1px solid var(--glass-border);
                border-radius: 4px;
                background: var(--input-bg);
                transition: all 0.3s ease;
            }

            .custom-checkbox .form-check-label::after { /* Checkmark */
                content: '\f00c';
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
                position: absolute;
                left: 4px;
                top: 50%;
                transform: translateY(-50%) scale(0);
                font-size: 0.9rem;
                color: var(--glow-cyan);
                transition: all 0.3s ease;
            }

        .custom-checkbox .form-check-input:checked + .form-check-label::before {
            background: rgba(0, 183, 235, 0.2);
            border-color: var(--glow-cyan);
        }

        .custom-checkbox .form-check-input:checked + .form-check-label::after {
            transform: translateY(-50%) scale(1);
        }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2.5rem;
    }

    .btn-cyber {
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        border: none;
        letter-spacing: 0.5px;
        text-decoration: none;
        text-align: center;
    }

    .btn-primary-cyber {
        background: linear-gradient(45deg, var(--glow-cyan), var(--glow-magenta));
        color: #fff;
        box-shadow: 0 4px 20px rgba(150, 50, 255, 0.5);
    }

        .btn-primary-cyber:hover {
            color: #fff;
            box-shadow: 0 6px 25px rgba(0, 183, 235, 0.7);
            transform: translateY(-2px);
        }

    .btn-secondary-cyber {
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid var(--glass-border);
    }

        .btn-secondary-cyber:hover {
            background: rgba(137, 124, 255, 0.1);
            border-color: var(--text-secondary);
            color: var(--text-primary);
        }

    .text-danger {
        font-size: 0.85rem;
        color: #ff6b6b;
        margin-top: 0.5rem;
    }

    @@media (max-width: 768px) {
        .form-wrapper {
            padding: 2rem 1.5rem;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="container-fluid py-4">
    <div class="page-header">
        <h1 class="page-title"><i class="fas fa-edit"></i> Edit Category</h1>
        <a asp-action="Index" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="form-wrapper">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="CategoryID" />

            <div class="mb-4">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CategoryDescription" class="form-label">Description</label>
                <textarea asp-for="CategoryDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ParentCategoryID" class="form-label">Parent Category</label>
                <select asp-for="ParentCategoryID" class="form-select" asp-items="ViewBag.ParentCategories">
                    @* <option value="">-- No Parent --</option> *@
                </select>
                <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
            </div>

            <div class="custom-checkbox">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Is Active</label>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn-cyber btn-secondary-cyber">Cancel</a>
                <button type="submit" class="btn-cyber btn-primary-cyber">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}