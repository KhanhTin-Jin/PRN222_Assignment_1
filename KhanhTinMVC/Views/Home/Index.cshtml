@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to FU News Management System</h1>
    <p>A comprehensive platform for managing university news and announcements.</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">About the System</h5>
                <p class="card-text">
                    The FU News Management System is designed to help university administrators, staff, and lecturers
                    efficiently manage news content for the university community.
                </p>
                <p class="card-text">
                    With role-based access control, the system ensures that only authorized personnel can create,
                    edit, and publish news articles.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Key Features</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Role-based access control (Admin, Staff, Lecturer)</li>
                    <li class="list-group-item">News article management with categories and tags</li>
                    <li class="list-group-item">Comprehensive reporting and analytics</li>
                    <li class="list-group-item">Search functionality across all content</li>
                    <li class="list-group-item">User-friendly interface for all operations</li>
                </ul>
            </div>
        </div>
    </div>
</div>
