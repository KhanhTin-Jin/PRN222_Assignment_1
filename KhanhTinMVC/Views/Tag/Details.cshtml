@model KhanhTin.BusinessLogic.DTOs.TagDto
@{
    ViewData["Title"] = "Tag Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Font & Icons *@
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    :root {
        --bg-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        --glass-bg: rgba(22, 29, 62, 0.45);
        --glass-border: rgba(137, 124, 255, 0.2);
        --text-primary: #e0e0e0;
        --text-secondary: #9a9ed9;
        --glow-cyan: #00b7eb;
        --glow-magenta: #ff00ff;
        --glow-yellow: #feca57;
    }

    body {
        background: var(--bg-gradient);
        font-family: 'Poppins', sans-serif;
        color: var(--text-primary);
    }

    .sci-fi-container {
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .page-title {
        font-weight: 600;
        font-size: 2.5rem;
        color: var(--glow-cyan);
        text-shadow: 0 0 7px var(--glow-cyan);
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

    .btn-header {
        color: var(--text-secondary);
        border: 1px solid var(--glass-border);
        font-weight: 500;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-header.btn-back:hover {
            color: var(--text-primary);
            border-color: var(--text-secondary);
        }

        .btn-header.btn-edit {
            background: transparent;
            border-color: var(--glow-magenta);
            color: var(--glow-magenta);
        }

            .btn-header.btn-edit:hover {
                background-color: var(--glow-magenta);
                color: #fff;
                box-shadow: 0 0 12px var(--glow-magenta);
                transform: translateY(-2px);
            }

    .details-card {
        background: var(--glass-bg);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 16px;
        border: 1px solid var(--glass-border);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .details-card-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--glass-border);
    }

    .header-tag-badge {
        display: inline-block;
        font-size: 1.5rem;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        background-color: var(--text-secondary);
        color: #1a1a2e;
        box-shadow: 0 0 10px var(--text-secondary);
    }

    .details-card-body {
        padding: 2.5rem;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .detail-item strong {
        display: block;
        color: var(--text-secondary);
        font-weight: 500;
        margin-bottom: 0.3rem;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-item p {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .alert-cyber {
        margin-top: 2rem;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 1rem;
        background: rgba(254, 202, 87, 0.1);
        border: 1px solid rgba(254, 202, 87, 0.5);
        color: var(--text-primary);
    }

        .alert-cyber i {
            font-size: 1.5rem;
            color: var(--glow-yellow);
            text-shadow: 0 0 8px var(--glow-yellow);
        }
</style>

<div class="sci-fi-container">
    <div class="page-header">
        <h1 class="page-title">Tag Details</h1>
        <div class="header-actions">
            <a asp-action="Index" class="btn-header btn-back">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.TagID" class="btn-header btn-edit">
                <i class="fas fa-pencil-alt"></i> Edit
            </a>
        </div>
    </div>

    <div class="details-card">
        <div class="details-card-header">
            <h5 class="mb-0">
                <span class="header-tag-badge">@Model.TagName</span>
            </h5>
        </div>
        <div class="details-card-body">
            <div class="details-grid">
                <div class="detail-item">
                    <strong>Tag Name</strong>
                    <p>@Model.TagName</p>
                </div>
                <div class="detail-item">
                    <strong>News Articles Linked</strong>
                    <p>@Model.NewsCount</p>
                </div>
                <div class="detail-item">
                    <strong>Note</strong>
                    <p>@(string.IsNullOrEmpty(Model.Note) ? "N/A" : Model.Note)</p>
                </div>
                <div class="detail-item">
                    <strong>Can Be Deleted</strong>
                    <p>@(Model.CanDelete ? "Yes" : "No")</p>
                </div>
            </div>

            @if (!Model.CanDelete)
            {
                <div class="alert-cyber">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>This tag cannot be deleted because it is currently associated with one or more news articles.</span>
                </div>
            }
        </div>
    </div>
</div>